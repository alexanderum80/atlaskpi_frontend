div(layout="column")
    //- name
    div(flex)
        bw-text-box([fg]="fg", field="name", label="Name", leftIcon="local-offer")   
    .m-t-15(flex)
        bw-select-picker(flex
            [fg]="fg", 
            field="appliesTo",
            label="I would like to set a target for",
            [items]="groupingsList",
            leftIcon="group-work"
        )

    .m-t-15(flex, layout="row")
        .m-r-10(flex)
            bw-select-picker(
                [fg]="fg", 
                field="type",
                label="Objective",
                [items]="objectiveList",
                leftIcon="gps-dot"
            )  

        .text-center.m-t-10(flex="20")
            bw-number.m-r-20([fg]="fg", field="value", label="Value", leftIcon="edit")   
            
        .m-t-15.m-l-10.text-center(flex-initial)
            bw-button-group([options]="valueOptions", type="default", [activeOption]="fg.controls['unit'].value", (optionSelected)="onOptionSelected($event)")
    
    .m-t-15(flex, layout="row")
        .m-r-10(flex="50")
            bw-select-picker(flex,
                [fg]="fg", 
                field="period",
                label="Target period:",
                [items]="targetPeriodList",
                leftIcon="calendar-alt",
                [disabled]="noFrequency",
                noneSelectedText="{{nodoSelectedText || 'NOTHING SELECTED'}}"
            )
        .m-l-10(flex="50", *ngIf="isBaseOnVisible")
            bw-select-picker(flex,
                [fg]="fg", 
                field="compareTo",
                label="Based on",
                [items]="baseOnList",
                leftIcon="calendar-alt",
                noneSelectedText="{{nodoSelectedTextCompareTo || 'NOTHING SELECTED'}}"
            )

    .m-t-15(flex, layout="row")
        .m-r-10(*ngIf="!isCustom", flex="50")
            bw-checkbox.m-t-25(flex,
                [fg]="fg",
                field="recurrent",
                label="Repeat {{frequency}}",
            )
        div(flex="50")
            bw-toggle(*ngIf="activeVisible", [fg]="fg", field="active", color="green", label="Active")