bw-modal(size="md", [openOnInit]="true", (onClosed)="cancel()", (onDismiss)="cancel()")
    bw-modal-header
        h4.modal-title.c-black Create Business Unit
    bw-modal-body
        kpi-business-unit-form(#businessUnitForm)
    bw-modal-footer
        bw-button(color="blue", title="Save", icon = "check", class="normal", (clicked)="save()")
        bw-button(title="Cancel", [simple]="true",icon = "cancel", (clicked)="cancel()")