bw-card.m-b-5.p-relative(flex, [depth]="1")
    bw-card-body.box(flex, [padded]="padded", (click)="setActive()")
        div(layout="column", style="min-height: 100px;")
            .text-center.mini-chart-title.m-t-10.m-b-10(flex) {{ item.title }}
            kpi-show-map(
                [markers]="item.markers", 
                [legendColors]="legendColors", 
                [legendClosed]="true", 
                [Height]="'280px'",
                [showSettingsBtn]="showSettingsBtn",
                [showLegendBtn] ="showLegendBtn")
    div(*ngIf="allowSelected && (selected$ | async); let itemSelected")
        .marker.animated.fadeIn(*ngIf="(inspectorOpen$ | async)  && itemSelected === item")
            i.zmdi.zmdi-check-circle.text-right.c-green.checked