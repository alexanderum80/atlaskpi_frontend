.mobile-menu(layout="column", layout-align="center center")
    //- dashboard
    .mobile-menu--dashboard
        .menu-option((click)="navigateTo('/dashboards')")
            .menu-option--icon
                i.zmdi.zmdi-view-dashboard
            .menu-option--title Main Dashboard

    //- calendar
    .mobile-menu--calendar
        .menu-option((click)="navigateTo('/appointments/list')")
            .menu-option--icon
                i.zmdi.zmdi-calendar
            .menu-option--title Calendar

    //- notifications
    .mobile-menu--notifications
        .menu-option((click)="navigateTo('/notifications')")
            .menu-option--icon
                i.zmdi.zmdi-notifications
            .menu-option--title Notifications
