kpi-spinner(*ngIf="loading")
.show-funnel-container.h-90(layout="column", layout-align="center center", layout-padding)
    kpi-funnel-preview.w-100.h-100(
        flex, 
        [renderedFunnel]="(renderedFunnel$ | async)",
        width="500",
        height="500",
        (stageClicked)="onStageClicked($event)"
        )

bw-modal(
         #stageDetailsModal,
         animation="true",
         keyboard="true",
         backdrop="true",
         size="lg",
         (onClose)="modalClose()",
         (onDismiss)="modalClose()")
    bw-modal-header([show-close]="true")
        h4.modal-title.c-black {{selectedStageInfo?.stageName}} details:
    bw-modal-body
        kpi-funnel-stage-details.w-100.h-100(*ngIf="selectedStageInfo", 
                                            [stageInfoParams]="selectedStageInfo")