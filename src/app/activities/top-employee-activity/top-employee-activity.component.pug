.activity(flex, layout="row")
    .activity-icon
        .avatar_info(layout="row", layout-align="space-around")
            | {{ initials }}
    div(flex)
        div(layout="column")
            div(flex)
                div(layout="row", layout-padding)
                    div(flex)
                        div(layout="column")
                            .activity-header.m-b-10 TOP EMPLOYEE
                            .activity-body {{ fullName }} was the best saler yesterday with a total sales of 
                                strong {{ sales[0].total | currency }}

                        div.activity-detail-icon(layout="row", layout-align="end end")
                            i.zmdi.zmdi-eye((click)="showDetails()")

            div(flex)
                div.users-activity-border(*ngIf="viewDetails", layout="row")
                    div(flex)
                        div These data was collected on 
                            strong {{ startDayDate | date:'MM/dd/y' }} 
                            | at 
                            strong {{ startDayDate | date:'hh:mm aa' }} 
                            | and includes all sources of revenue.
                    div(flex-initial)
                        div(layout="row", layout-align="end start")
                            i.zmdi.zmdi-close((click)="hideDetails()")
